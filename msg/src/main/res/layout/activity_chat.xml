<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".mvp.view.ChatActivity">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_chat"
        android:layout_weight="15"
        android:layout_width="match_parent"
        android:layout_height="0dp"/>

    <LinearLayout
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <EditText
            android:id="@+id/et_act_send_msg"
            android:layout_weight="10"
            android:layout_marginLeft="20dp"
            android:layout_width="0dp"
            android:layout_marginRight="10dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/bt_act_send_msg"
            android:text="发送"
            android:layout_marginRight="20dp"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:background="#C7C0C0"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <ImageView
            android:contentDescription="@string/app_name"
            android:id="@+id/iv_act_send_msg_wheat"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/ic_action_wheat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_act_send_msg_pic"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/ic_action_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/iv_mr"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/ic_action_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/ic_action_local"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/ic_action_face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_weight="1"
            android:layout_gravity="center"
            android:src="@drawable/ic_action_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>